{
  "parser": "babel-eslint",
  "env": {    
    "browser": true,
    "node": true,
    "es6": true
  }, 
  "rules": {
    "quotes": [2, "single"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "semi": ["error", "always"],
    "no-console": [0],
    "space-before-function-paren":[0],
    "indent": ["error", 2],
    "object-curly-spacing": ["error", "always"],
    "max-nested-callbacks": ["error", 4]
  },
  "extends": "htmlacademy/es6",
  "globals": {
    "angular": 1,
    "console": 1,
    "Promise": 1,
    "io": 1,
    "describe": 1,
    "it": 1,
    "before": 1,
    "beforeEach": 1,
    "after": 1,
    "afterEach": 1
  },
  "parserOptions": {
    "sourceType":"module",
    "ecmaVersion": 6,
      "ecmaFeatures": {
          "modules": true
      }
  }
}